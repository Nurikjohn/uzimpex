doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Title
        link(href="../css/bootstrap.min.css" rel="stylesheet")
    body
        .container.pt-lg-4
            .d-flex.justify-content-between
                .h5 Products
                a(href="/admin/product/add-product").btn.btn-outline-dark Qo'shish
            .d-flex.justify-content-center
                for cat in categories
                    if cat.slug === current
                        a.mx-2(href=`/admin/${cat.slug}`).btn.btn-outline-dark.active= cat.title
                    else
                        a.mx-2(href=`/admin/${cat.slug}`).btn.btn-outline-dark= cat.title
            // Nav pills
            ul.nav.nav-pills.mb-2
                for subCat in subCategories
                    li.nav-item
                        if subCategories.indexOf(subCat) === 0
                            a.nav-link.tab-item.active(data-toggle="pill" href=`#${subCat.slug}-${subCategories.indexOf(subCat)}`)= subCat.title
                        else
                            a.nav-link.tab-item(data-toggle="pill" href=`#${subCat.slug}-${subCategories.indexOf(subCat)}`)= subCat.title
                                        
            .tab-content
                for subCat in subCategories
                    if subCategories.indexOf(subCat) === 0
                        - var subClass = "active"
                    else
                        - var subClass = ""

                    div(id=`${subCat.slug}-${subCategories.indexOf(subCat)}` class=subClass).tab-pane
                        .row
                            for product in subCat.products
                                .col-lg-3.mb-3
                                    .card.my-2.mx-2(style="min-height: 100%")
                                        img.card-img-top(src=`/${product.image}` alt="...")
                                        .card-body
                                            h5.card-title= product.title[0]
                                            p.card-text= product.description[0]
                                        .card-footer.d-flex.justify-content-between
                                            button.btn.btn-outline-danger.delete-prod(data-url=`/api/products/${product._id}`) Delete
                                            a.btn.btn-success(href=`/admin/product/edit-product/${product._id}`) Edit
                        
                                        
                    
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        script(src="../js/popper.min.js")
        script(src="../js/bootstrap.min.js")
        script(src='../js/script.js')
